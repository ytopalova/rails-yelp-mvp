<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %><%= link_to 'Delete', review_path(review), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></li>
  <% end %>
</ul>

<%= link_to 'Back', restaurants_path %>
<%= link_to 'New review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
